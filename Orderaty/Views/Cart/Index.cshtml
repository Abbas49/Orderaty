@model IEnumerable<Orderaty.Models.CartItem>

@{
    ViewData["Title"] = "Shopping Cart";
}

<div class="container mt-5">
    <h2 class="mb-4 text-center">🛒 Shopping Cart</h2>

    @if (!Model.Any())
    {
        <div class="alert alert-info text-center">
            Your cart is currently empty.
        </div>
    }
    else
    {
        <table class="table table-bordered align-middle text-center">
            <thead class="table-dark">
                <tr>
                    <th>Image</th>
                    <th>Product</th>
                    <th>Price</th>
                    <th>Quantity</th>
                    <th>Total</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            <img src="~/images/products/@item.Product.Image"
                                 alt="@item.Product.Name"
                                 style="width:70px;height:70px;object-fit:cover;" />
                        </td>
                        <td>@item.Product.Name</td>
                        <td>@item.Product.Price.ToString("C")</td>
                        <td>@item.Quantity</td>
                        <td>@(item.Product.Price * item.Quantity)</td>
                        <td>
                            <form asp-action="Remove" asp-controller="Cart" method="post">
                                <input type="hidden" name="id" value="@item.Id" />
                                <button type="submit" class="btn btn-sm btn-danger">🗑️ Remove</button>
                            </form>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <div class="text-end mt-3">
            <h4>
                Total Amount:
                <span class="text-success fw-bold">
                    @Model.Sum(x => x.Product.Price * x.Quantity)
                </span>
            </h4>
            <form asp-action="Checkout" asp-controller="Cart" method="post" class="mt-3">
                <button type="submit" class="btn btn-success btn-lg">Proceed to Checkout</button>
            </form>
        </div>
    }
</div>

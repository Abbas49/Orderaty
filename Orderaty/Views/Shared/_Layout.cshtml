<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Orderaty</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Orderaty.styles.css" asp-append-version="true" />
    @RenderSection("Styles", required: false)
</head>
<body>
    <!-- Modern Navbar -->
    <nav class="navbar">
        <div class="navbar-container">
            <!-- Logo Section -->
            <a href="/" class="navbar-logo">
                <div class="logo-icon">
                    <i class="fas fa-shopping-bag"></i>
                </div>
                <span class="logo-text">Orderaty</span>
            </a>
            
            <!-- Desktop Navigation Links -->
            <div class="navbar-menu" id="navbar-menu">
                <div class="navbar-links">
                    <a href="/" class="navbar-item">
                        <i class="fas fa-home"></i>
                        <span>Home</span>
                    </a>
                    <a asp-controller="Seller" asp-action="Browse" class="navbar-item">
                        <i class="fas fa-store"></i>
                        <span>Browse Stores</span>
                    </a>
                    @if(User.Identity.IsAuthenticated && User.IsInRole("Client"))
                    {
                        @inject Orderaty.Data.AppDbContext DbContext
                        var currentUserId = DbContext.Users.FirstOrDefault(c => c.UserName == User.Identity.Name)?.Id;
                        var cartCount = DbContext.CartItems.Count(c => c.ClientId == currentUserId);
                        
                        <a href="/Cart/Index" class="navbar-item">
                            <i class="fas fa-shopping-cart"></i>
                            <span>Cart</span>
                            @if(cartCount > 0)
                            {
                                <span class="cart-badge" id="cart-count">@cartCount</span>
                            }
                        </a>
                    }
                    <a href="@Url.Action("History", "Order")" class="navbar-item">
                        <i class="fas fa-receipt"></i>
                        <span>Orders</span>
                    </a>
                </div>
                
                <!-- Mobile Divider -->
                <div class="navbar-divider"></div>
                
                <!-- User Actions -->
                <div class="navbar-actions">
                    @if (User.Identity.IsAuthenticated)
                    {
                        @if (User.IsInRole("Client"))
                        {
                            <a href="/Client/Profile" class="navbar-item navbar-profile">
                                <i class="fas fa-user-circle"></i>
                                <span>Profile</span>
                            </a>
                        }
                        else if (User.IsInRole("Seller"))
                        {
                            <a href="/Seller/Profile" class="navbar-item navbar-profile">
                                <i class="fas fa-store-alt"></i>
                                <span>My Store</span>
                            </a>
                        }
                        else if (User.IsInRole("Delivery"))
                        {
                            <a href="/Delivery/Home" class="navbar-item navbar-profile">
                                <i class="fas fa-shipping-fast"></i>
                                <span>Deliveries</span>
                            </a>
                        }
                        <a asp-controller="User" asp-action="Logout" class="navbar-item navbar-logout">
                            <i class="fas fa-sign-out-alt"></i>
                            <span>Logout</span>
                        </a>
                    }
                    else
                    {
                        <a asp-controller="User" asp-action="Login" class="navbar-btn btn-login">
                            <i class="fas fa-sign-in-alt"></i>
                            <span>Login</span>
                        </a>
                        <a asp-controller="User" asp-action="Register" class="navbar-btn btn-register">
                            <i class="fas fa-user-plus"></i>
                            <span>Sign Up</span>
                        </a>
                    }
                </div>
            </div>
            
            <!-- Right Actions (Desktop) -->
            <div class="navbar-right">
                <!-- Theme Switcher -->
                <div class="theme-switcher">
                    <button class="theme-toggle-btn" id="theme-toggle" aria-label="Change theme">
                        <i class="fas fa-palette"></i>
                    </button>
                    <div class="theme-dropdown" id="theme-dropdown">
                        <div class="theme-dropdown-header">
                            <i class="fas fa-swatchbook"></i>
                            <span>Choose Theme</span>
                        </div>
                        <button class="theme-option active" data-theme="green-fresh">
                            <div class="theme-icon">
                                <i class="fas fa-leaf"></i>
                            </div>
                            <div class="theme-details">
                                <div class="theme-name">Green Fresh</div>
                                <div class="theme-description">Natural & vibrant</div>
                            </div>
                            <i class="fas fa-check theme-checkmark"></i>
                        </button>
                        <button class="theme-option" data-theme="ocean-blue">
                            <div class="theme-icon">
                                <i class="fas fa-water"></i>
                            </div>
                            <div class="theme-details">
                                <div class="theme-name">Ocean Blue</div>
                                <div class="theme-description">Professional & calm</div>
                            </div>
                            <i class="fas fa-check theme-checkmark"></i>
                        </button>
                        <button class="theme-option" data-theme="sunset-purple">
                            <div class="theme-icon">
                                <i class="fas fa-moon"></i>
                            </div>
                            <div class="theme-details">
                                <div class="theme-name">Sunset Purple</div>
                                <div class="theme-description">Creative & elegant</div>
                            </div>
                            <i class="fas fa-check theme-checkmark"></i>
                        </button>
                        <button class="theme-option" data-theme="dark">
                            <div class="theme-icon">
                                <i class="fas fa-moon"></i>
                            </div>
                            <div class="theme-details">
                                <div class="theme-name">Dark Mode</div>
                                <div class="theme-description">Easy on the eyes</div>
                            </div>
                            <i class="fas fa-check theme-checkmark"></i>
                        </button>
                    </div>
                </div>
                
                <!-- Mobile Menu Toggle -->
                <button class="navbar-toggle" id="navbar-toggle" aria-label="Toggle menu">
                    <span class="toggle-bar"></span>
                    <span class="toggle-bar"></span>
                    <span class="toggle-bar"></span>
                </button>
            </div>
        </div>
    </nav>

    <main role="main">
        @RenderBody()
    </main>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <div class="footer-content">
                <div class="footer-column">
                    <h3>Orderaty</h3>
                    <ul>
                        <li><a href="#">About</a></li>
                        <li><a href="#">Careers</a></li>
                        <li><a href="#">Press</a></li>
                    </ul>
                </div>
                
                <div class="footer-column">
                    <h3>Support</h3>
                    <ul>
                        <li><a href="#">Help Center</a></li>
                        <li><a href="#">Contact Us</a></li>
                        <li><a href="#">Safety</a></li>
                    </ul>
                </div>
                
                <div class="footer-column">
                    <h3>Legal</h3>
                    <ul>
                        <li><a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a></li>
                        <li><a href="#">Terms</a></li>
                    </ul>
                </div>
            </div>
            
            <div class="footer-bottom">
                <p>&copy; 2025 Orderaty. All rights reserved.</p>
            </div>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validate/1.19.5/jquery.validate.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-validation-unobtrusive/3.2.12/jquery.validate.unobtrusive.min.js"></script>

    @await RenderSectionAsync("Scripts", required: false)

</body>
</html>

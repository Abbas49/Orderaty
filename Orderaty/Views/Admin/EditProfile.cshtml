@model Orderaty.Models.User
@{
    ViewData["Title"] = "Edit Profile";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-profile.css" asp-append-version="true" />
}

<!-- Edit Profile Section -->
<section class="profile-section">
    <div class="profile-container">
        <div class="profile-card">
            <div class="profile-header">
                <h2 class="profile-name">Edit Profile</h2>
                <p class="profile-subtitle">Update your administrator information</p>
            </div>

            <form asp-action="EditProfile" method="post" enctype="multipart/form-data" class="profile-form" novalidate>
                <div asp-validation-summary="All" class="validation-summary"></div>

                <input type="hidden" asp-for="Id" />

                <!-- Profile Image Upload -->
                <div class="form-group-image">
                    <div class="profile-img-wrapper">
                        <img id="profilePreview"
                             src="@(string.IsNullOrEmpty(Model.Image) ? Url.Content("~/images/default-user.png") : Url.Content("~/images/users/" + Model.Image))"
                             alt="Profile Picture"
                             class="profile-img" />
                        <div class="upload-overlay" onclick="document.getElementById('imageFile').click()">
                            <span class="upload-text">
                                <i class="fas fa-camera"></i> Change Photo
                            </span>
                        </div>
                    </div>
                    <input type="file" name="imageFile" id="imageFile" accept="image/*" style="display: none;" />
                </div>

                <div class="form-group">
                    <label asp-for="FullName" class="form-label">
                        <i class="fas fa-user"></i>
                        Full Name
                    </label>
                    <input asp-for="FullName" class="form-input" placeholder="Enter your full name" />
                    <span asp-validation-for="FullName" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="PhoneNumber" class="form-label">
                        <i class="fas fa-phone"></i>
                        Phone Number
                    </label>
                    <input asp-for="PhoneNumber" class="form-input" placeholder="(123) 456-7890" />
                    <span asp-validation-for="PhoneNumber" class="validation-error"></span>
                </div>

                <div class="form-group">
                    <label asp-for="Email" class="form-label">
                        <i class="fas fa-envelope"></i>
                        Email
                    </label>
                    <input asp-for="Email" class="form-input" placeholder="your.email@example.com" />
                    <span asp-validation-for="Email" class="validation-error"></span>
                </div>

                <!-- Change Password Section -->
                <div class="form-group password-section">

                    <h3 class="section-title">
                        <i class="fas fa-lock"></i>
                        Change Password
                    </h3>

                    <div class="form-group">
                        <label class="form-label" for="currentPassword">
                            <i class="fas fa-lock"></i>
                            Current Password
                        </label>
                        <input type="password" name="currentPassword" id="currentPassword" class="form-input" placeholder="Current password" />
                        <span id="currentPasswordError" class="validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="newPassword">
                            <i class="fas fa-key"></i>
                            New Password
                        </label>
                        <input type="password" name="newPassword" id="newPassword" class="form-input" placeholder="New password" />
                        <span id="newPasswordError" class="validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label class="form-label" for="confirmPassword">
                            <i class="fas fa-key"></i>
                            Confirm New Password
                        </label>
                        <input type="password" name="confirmPassword" id="confirmPassword" class="form-input" placeholder="Confirm new password" />
                        <span id="confirmPasswordError" class="validation-error"></span>
                    </div>
                    <p class="password-note"><small>Leave these fields empty if you don't want to change your password.</small></p>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn-update">
                        <i class="fas fa-save"></i>
                        Save Changes
                    </button>
                    <a asp-action="Profile" class="btn-cancel">
                        <i class="fas fa-times"></i>
                        Cancel
                    </a>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Hide validation summary when it has no visible text (handles ASP.NET empty <ul>/<li>)
        (function () {
            const summarySelector = '.validation-summary';

            function hasVisibleText(el) {
                // innerText reflects visible text to the user (ignores hidden/empty nodes)
                try {
                    return (el && el.innerText && el.innerText.trim().length > 0);
                } catch (e) {
                    return false;
                }
            }

            function updateSummaryVisibility(el) {
                if (!el) return;
                if (hasVisibleText(el)) {
                    el.style.display = '';
                    el.setAttribute('aria-hidden', 'false');
                } else {
                    el.style.display = 'none';
                    el.setAttribute('aria-hidden', 'true');
                }
            }

            function init() {
                const summary = document.querySelector(summarySelector);
                updateSummaryVisibility(summary);

                if (!summary) return;

                // Observe content changes (client validation will add/remove nodes)
                const mo = new MutationObserver(() => updateSummaryVisibility(summary));
                mo.observe(summary, { childList: true, subtree: true, characterData: true });

                // Also check after form submit / validation run
                const form = summary.closest('form');
                if (form) {
                    form.addEventListener('submit', function () {
                        setTimeout(() => updateSummaryVisibility(summary), 10);
                    });
                }
            }

            if (document.readyState === 'loading') {
                document.addEventListener('DOMContentLoaded', init);
            } else {
                init();
            }
        })();
    </script>

    <script>
        // Preview image when selected
        document.getElementById('imageFile').addEventListener('change', function (e) {
            const file = e.target.files[0];
            if (file) {
                const reader = new FileReader();
                reader.onload = function (x) {
                    document.getElementById('profilePreview').src = x.target.result;
                }
                reader.readAsDataURL(file);
            }
        });
    </script>

    <script>
        // Client-side confirmation for password fields (quick feedback only)
        (function () {
            const form = document.querySelector('.profile-form');
            if (!form) return;

            function clearPasswordErrors() {
                document.getElementById('currentPasswordError').textContent = '';
                document.getElementById('newPasswordError').textContent = '';
                document.getElementById('confirmPasswordError').textContent = '';
            }

            form.addEventListener('submit', function (e) {
                clearPasswordErrors();

                const current = document.getElementById('currentPassword').value;
                const newPwd = document.getElementById('newPassword').value;
                const confirm = document.getElementById('confirmPassword').value;

                // If any password field is filled, require current + new + confirm
                if (current || newPwd || confirm) {
                    let blocked = false;
                    if (!current) {
                        document.getElementById('currentPasswordError').textContent = 'Current password is required.';
                        blocked = true;
                    }
                    if (!newPwd) {
                        document.getElementById('newPasswordError').textContent = 'New password is required.';
                        blocked = true;
                    }
                    if (newPwd !== confirm) {
                        document.getElementById('confirmPasswordError').textContent = 'Confirmation does not match new password.';
                        blocked = true;
                    }

                    if (blocked) {
                        // Prevent submit to show client-side errors (server will also validate)
                        e.preventDefault();
                        return false;
                    }
                }
            });
        })();
    </script>
}
@{
    ViewData["Title"] = "Admin Dashboard";
}

@section Styles {
    <link rel="stylesheet" href="~/css/admin-dashboard.css" asp-append-version="true" />
}

<!-- Dashboard Header -->
<section class="dashboard-header">
    <div class="container">
        <div class="header-content">
            <div class="welcome-section">
                <div class="welcome-text">
                    <h1 class="dashboard-title">
                        <i class="fas fa-shield-alt"></i>
                        Admin Dashboard
                    </h1>
                    <p class="dashboard-subtitle">Welcome back, <strong>Administrator</strong>! üë®‚Äçüíº</p>
                </div>
                <div class="admin-status">
                    <span class="status-badge status-admin">
                        <i class="fas fa-crown"></i>
                        Super Admin
                    </span>
                </div>
            </div>
            <div class="header-actions">
                <a asp-action="Coupons" class="action-btn btn-primary">
                    <i class="fas fa-ticket-alt"></i>
                    Manage Coupons
                </a>
                <a asp-action="Users" class="action-btn btn-success">
                    <i class="fas fa-users"></i>
                    View Users
                </a>
            </div>
        </div>
    </div>
</section>

<!-- Platform Statistics Cards -->
<section class="stats-section">
    <div class="container">
        <h2 class="section-title">
            <i class="fas fa-chart-line"></i>
            Platform Overview
        </h2>
        <div class="stats-grid">
            <!-- Total Users -->
            <div class="stat-card stat-users">
                <div class="stat-icon">
                    <i class="fas fa-users"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-label">Total Users</h3>
                    <p class="stat-value">0</p>
                    <span class="stat-change positive">
                        <i class="fas fa-arrow-up"></i> Platform registered users
                    </span>
                </div>
            </div>

            <!-- Total Sellers -->
            <div class="stat-card stat-sellers">
                <div class="stat-icon">
                    <i class="fas fa-store"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-label">Total Sellers</h3>
                    <p class="stat-value">0</p>
                    <span class="stat-change">
                        <i class="fas fa-check-circle"></i> Active stores
                    </span>
                </div>
            </div>

            <!-- Total Orders -->
            <div class="stat-card stat-orders">
                <div class="stat-icon">
                    <i class="fas fa-shopping-cart"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-label">Total Orders</h3>
                    <p class="stat-value">0</p>
                    <span class="stat-change">
                        <i class="fas fa-truck"></i> Platform-wide orders
                    </span>
                </div>
            </div>

            <!-- Total Revenue -->
            <div class="stat-card stat-revenue">
                <div class="stat-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <div class="stat-content">
                    <h3 class="stat-label">Total Revenue</h3>
                    <p class="stat-value">$0.00</p>
                    <span class="stat-change positive">
                        <i class="fas fa-coins"></i> Platform earnings
                    </span>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- User Breakdown Statistics -->
<section class="breakdown-section">
    <div class="container">
        <h2 class="section-title">
            <i class="fas fa-users-cog"></i>
            User Breakdown
        </h2>
        <div class="breakdown-grid">
            <!-- Clients -->
            <div class="breakdown-card card-clients">
                <div class="breakdown-icon">
                    <i class="fas fa-user-circle"></i>
                </div>
                <div class="breakdown-content">
                    <h3 class="breakdown-label">Clients</h3>
                    <p class="breakdown-value">0</p>
                    <div class="breakdown-bar">
                        <div class="breakdown-fill" style="width: 0%"></div>
                    </div>
                </div>
            </div>

            <!-- Sellers -->
            <div class="breakdown-card card-sellers">
                <div class="breakdown-icon">
                    <i class="fas fa-store-alt"></i>
                </div>
                <div class="breakdown-content">
                    <h3 class="breakdown-label">Sellers</h3>
                    <p class="breakdown-value">0</p>
                    <div class="breakdown-bar">
                        <div class="breakdown-fill" style="width: 0%"></div>
                    </div>
                </div>
            </div>

            <!-- Delivery Personnel -->
            <div class="breakdown-card card-delivery">
                <div class="breakdown-icon">
                    <i class="fas fa-shipping-fast"></i>
                </div>
                <div class="breakdown-content">
                    <h3 class="breakdown-label">Delivery Personnel</h3>
                    <p class="breakdown-value">0</p>
                    <div class="breakdown-bar">
                        <div class="breakdown-fill" style="width: 0%"></div>
                    </div>
                </div>
            </div>

            <!-- Admins -->
            <div class="breakdown-card card-admins">
                <div class="breakdown-icon">
                    <i class="fas fa-user-shield"></i>
                </div>
                <div class="breakdown-content">
                    <h3 class="breakdown-label">Administrators</h3>
                    <p class="breakdown-value">1</p>
                    <div class="breakdown-bar">
                        <div class="breakdown-fill" style="width: 100%"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Quick Management Actions -->
<section class="quick-actions-section">
    <div class="container">
        <h2 class="section-title">
            <i class="fas fa-bolt"></i>
            Quick Management
        </h2>
        <div class="actions-grid">
            <a asp-action="Users" class="quick-action-card">
                <div class="action-icon action-icon-users">
                    <i class="fas fa-users-cog"></i>
                </div>
                <h3 class="action-title">User Management</h3>
                <p class="action-description">View, suspend, or manage all platform users</p>
            </a>

            <a asp-action="SellerApproval" class="quick-action-card">
                <div class="action-icon action-icon-approval">
                    <i class="fas fa-user-check"></i>
                </div>
                <h3 class="action-title">Seller Approval</h3>
                <p class="action-description">Review and approve new seller registrations</p>
            </a>

            <a asp-action="Coupons" class="quick-action-card">
                <div class="action-icon action-icon-coupons">
                    <i class="fas fa-tags"></i>
                </div>
                <h3 class="action-title">Coupon Management</h3>
                <p class="action-description">Create, edit, and manage discount coupons</p>
            </a>

            <a href="#" class="quick-action-card">
                <div class="action-icon action-icon-reports">
                    <i class="fas fa-chart-bar"></i>
                </div>
                <h3 class="action-title">Reports & Analytics</h3>
                <p class="action-description">View detailed platform statistics and reports</p>
            </a>

            <a href="#" class="quick-action-card">
                <div class="action-icon action-icon-products">
                    <i class="fas fa-box"></i>
                </div>
                <h3 class="action-title">Product Moderation</h3>
                <p class="action-description">Review and moderate platform products</p>
            </a>

            <a href="#" class="quick-action-card">
                <div class="action-icon action-icon-orders">
                    <i class="fas fa-receipt"></i>
                </div>
                <h3 class="action-title">Order Monitoring</h3>
                <p class="action-description">Monitor and manage all platform orders</p>
            </a>
        </div>
    </div>
</section>

<!-- Recent Activity & Pending Actions -->
<section class="data-section">
    <div class="container">
        <div class="data-grid">
            <!-- Pending Seller Approvals -->
            <div class="data-card">
                <div class="card-header">
                    <h2 class="card-title">
                        <i class="fas fa-clock"></i>
                        Pending Seller Approvals
                    </h2>
                    <a asp-action="SellerApproval" class="view-all-link">
                        View All
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
                <div class="card-content">
                    <div class="empty-state-small">
                        <i class="fas fa-check-circle"></i>
                        <p>No pending approvals</p>
                    </div>
                </div>
            </div>

            <!-- Active Coupons -->
            <div class="data-card">
                <div class="card-header">
                    <h2 class="card-title">
                        <i class="fas fa-ticket-alt"></i>
                        Active Coupons
                    </h2>
                    <a asp-action="Coupons" class="view-all-link">
                        View All
                        <i class="fas fa-arrow-right"></i>
                    </a>
                </div>
                <div class="card-content">
                    <div class="empty-state-small">
                        <i class="fas fa-tags"></i>
                        <p>No active coupons</p>
                        <a asp-action="CreateCoupon" class="btn-small">
                            <i class="fas fa-plus"></i>
                            Create Coupon
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Platform Health & Performance -->
<section class="overview-section">
    <div class="container">
        <div class="overview-grid">
            <!-- Platform Health -->
            <div class="overview-card">
                <h2 class="overview-title">
                    <i class="fas fa-heartbeat"></i>
                    Platform Health
                </h2>
                <div class="info-list">
                    <div class="info-item">
                        <span class="info-label">
                            <i class="fas fa-check-circle"></i>
                            System Status
                        </span>
                        <span class="info-value status-good">Operational</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">
                            <i class="fas fa-database"></i>
                            Database
                        </span>
                        <span class="info-value status-good">Connected</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">
                            <i class="fas fa-server"></i>
                            Active Stores
                        </span>
                        <span class="info-value">0</span>
                    </div>
                    <div class="info-item">
                        <span class="info-label">
                            <i class="fas fa-truck"></i>
                            Active Deliveries
                        </span>
                        <span class="info-value">0</span>
                    </div>
                </div>
            </div>

            <!-- Recent Activity -->
            <div class="overview-card">
                <h2 class="overview-title">
                    <i class="fas fa-history"></i>
                    Recent Activity
                </h2>
                <div class="activity-list">
                    <div class="activity-item">
                        <div class="activity-icon">
                            <i class="fas fa-user-plus"></i>
                        </div>
                        <div class="activity-content">
                            <p class="activity-text">System initialized</p>
                            <span class="activity-time">Just now</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <script>
        // Add any dashboard-specific JavaScript here
        console.log('Admin Dashboard loaded');
    </script>
}

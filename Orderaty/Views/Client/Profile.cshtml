@model Orderaty.ViewModels.ClientProfile
@{
    ViewData["Title"] = "Profile";
    Layout = "_Layout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/client-profile.css" asp-append-version="true" />
}

<!-- Profile Section (View-only) -->
<section class="profile-section">
    <div class="profile-container">
        <div class="profile-card">
            <div class="profile-header">
                <div class="profile-img-wrapper">
                    <img src="~/images/users/@Model?.ImagePath" alt="Profile Picture" class="profile-img" />
                    <div class="upload-overlay view-only">
                        <span class="upload-text">
                            <i class="fas fa-camera"></i> Profile Picture
                        </span>
                    </div>
                </div>

                <h2 class="profile-name">@Model.FullName</h2>
                <span class="profile-role">Client</span>
            </div>

            <div class="profile-form view-only">
                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-user"></i>
                        Full Name
                    </label>
                    <div class="form-value">@Model.FullName</div>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-envelope"></i>
                        Email
                    </label>
                    <div class="form-value">@Model.Email</div>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-at"></i>
                        Username
                    </label>
                    <div class="form-value">@Model.UserName</div>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-phone"></i>
                        Phone Number
                    </label>
                    <div class="form-value">@Model.Phone</div>
                </div>

                <div class="form-group">
                    <label class="form-label">
                        <i class="fas fa-map-marker-alt"></i>
                        Address
                    </label>
                    <div class="form-value">@Model.Address</div>
                </div>
            </div>
        </div>

        <!-- Edit Profile button -->
        <div class="profile-actions">
            <a asp-controller="Client" asp-action="EditProfile" class="btn-edit">
                <i class="fas fa-user-edit"></i>
                Edit Profile
            </a>
        </div>
    </div>
</section>

@section Scripts {
    <!-- No validation or edit scripts needed for view-only page -->
}
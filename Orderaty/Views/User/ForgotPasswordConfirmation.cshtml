@{
    ViewBag.Title = "Forgot Password Confirmation";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

<section class="login-section">
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <i class="fas fa-envelope-open-text"></i>
                <h1 class="login-title">Check your email</h1>
                <p class="login-subtitle">If the email exists, a password reset link has been sent to your inbox.</p>
            </div>

            <div class="login-form">
                <a href="@TempData["InboxUrl"]" class="email-btn" target="_blank">
                    <i class="fas fa-envelope-open-text"></i>
                    Open Your Email
                </a>

                <a href="/User/Login" class="login-btn" role="button">
                    <i class="fas fa-sign-in-alt"></i>
                    Back to Sign In
                </a>

                <div class="login-footer">
                    <p class="footer-text">
                        Didn't receive the email?
                        <a href="/User/ForgotPassword" class="footer-link">Send again</a>
                    </p>
                </div>
            </div>
        </div>
    </div>
</section>
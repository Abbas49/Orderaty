@model Orderaty.ViewModels.RegisterDelivery
@{
    ViewData["Title"] = "AddDelivery";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="d-flex justify-content-center align-items-center vh-100 bg-light">
    <div class="card shadow-lg p-4 rounded-4" style="width: 420px; background: white;">
        <h3 class="text-center mb-4 fw-bold text-primary">Create an Account</h3>

        <form asp-action="AddDelivery" method="post" enctype="multipart/form-data" novalidate>
            <div class="form-floating mb-3">
                <input asp-for="FullName" class="form-control" value="@Model?.FullName" placeholder="Full Name" />
                <label asp-for="FullName"></label>
                <span asp-validation-for="FullName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="UserName" class="form-control" value="@Model?.UserName" placeholder="User Name" />
                <label asp-for="UserName"></label>
                <span asp-validation-for="UserName" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Email" class="form-control" value="@Model?.Email" placeholder="Email" />
                <label asp-for="Email"></label>
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>


            <div class="form-floating mb-3">
                <input asp-for="Phone" class="form-control" value="@Model?.Phone" placeholder="Phone Number" />
                <label asp-for="Phone"></label>
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>



            <div class="form-floating mb-3">
                <input asp-for="Password" type="password" class="form-control" placeholder="Password" />
                <label asp-for="Password"></label>
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="ConfirmPassword" type="password" class="form-control" placeholder="Confirm Password" />
                <label asp-for="ConfirmPassword"></label>
                <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Image" class="form-label">Profile Picture</label>
                <input asp-for="Image" type="file" value="@Model?.Image" class="form-control" />
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>

            <button type="submit" class="btn btn-primary w-100 py-2 fw-bold rounded-3">Register</button>

            <div class="text-center mt-3">
                <p class="text-muted">
                    Already have an account?
                    <a asp-action="Login" class="text-decoration-none text-primary fw-semibold">Login</a>
                </p>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

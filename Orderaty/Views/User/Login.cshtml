@using Orderaty.ViewModels
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model LoginUser

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

<!-- Login Section -->
<section class="login-section">
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <i class="fas fa-sign-in-alt"></i>
                <h1 class="login-title">Welcome Back</h1>
                <p class="login-subtitle">Sign in to continue to Orderaty</p>
            </div>

            <form method="post" action="/User/Login" class="login-form">
                <div class="form-group">
                    <label for="Email" class="form-label">
                        <i class="fas fa-envelope"></i>
                        Email
                    </label>
                    <input type="email" id="Email" name="Email" value="@Model?.Email" class="form-input" placeholder="your.email@example.com" required />
                </div>

                <div class="form-group">
                    <label for="Password" class="form-label">
                        <i class="fas fa-lock"></i>
                        Password
                    </label>
                    <input type="password" id="Password" name="Password" class="form-input" placeholder="Enter your password" required />
                </div>

                <button type="submit" class="login-btn">
                    <i class="fas fa-sign-in-alt"></i>
                    Sign In
                </button>

                <div class="login-footer">
                    <p class="footer-text">
                        Don't have an account?
                        <a href="/User/Register" class="footer-link">Create one</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}


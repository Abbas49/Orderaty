@model ForgotPasswordViewModel
@{
    ViewBag.Title = "Forgot Password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@section Styles {
    <link rel="stylesheet" href="~/css/login.css" asp-append-version="true" />
}

<section class="login-section">
    <div class="login-container">
        <div class="login-card">
            <div class="login-header">
                <i class="fas fa-unlock-alt"></i>
                <h1 class="login-title">Forgot Password</h1>
                <p class="login-subtitle">Enter your email and we'll send a reset link.</p>
            </div>

            <form asp-action="ForgotPassword" method="post" class="login-form">
                <div asp-validation-summary="All" class="text-danger"></div>

                <div class="form-group">
                    <label for="Email" class="form-label">
                        <i class="fas fa-envelope"></i>
                        Email
                    </label>
                    <input asp-for="Email" id="Email" class="form-input" placeholder="your.email@example.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>

                <button type="submit" class="login-btn">
                    <i class="fas fa-paper-plane"></i>
                    Send Reset Link
                </button>

                <div class="login-footer">
                    <p class="footer-text">
                        Remembered your password?
                        <a href="/User/Login" class="footer-link">Sign In</a>
                    </p>
                </div>
            </form>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
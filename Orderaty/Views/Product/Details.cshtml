@model Orderaty.Models.Product

<h2>@Model.Name</h2>

<div class="card" style="width: 22rem;">
    @if (!string.IsNullOrEmpty(Model.Image))
    {
        <img src="~/images/products/@Model.Image" class="card-img-top" alt="@Model.Name" />
    }
    else
    {
        <img src="~/images/default-product.png" class="card-img-top" alt="@Model.Name" />
    }

    <div class="card-body">
        <h5 class="card-title">@Model.Name</h5>
        <p class="card-text"><strong>Description:</strong> @Model.Description</p>
        <p><strong>Price:</strong> @Model.Price.ToString("C")</p>
        <p><strong>Available:</strong> @Model.Available_Amount</p>
        <p><strong>Rating:</strong> @Model.Rating</p>
    </div>

    <div class="card-footer">
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Edit</a>

        <form asp-action="Delete" method="post" class="d-inline">
            <input type="hidden" name="id" value="@Model.Id" />
            <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this product?')">
                Delete
            </button>
        </form>

        <a asp-action="Index" class="btn btn-secondary">Back</a>
    </div>
</div>

@model Orderaty.Models.Seller
@{
    ViewData["Title"] = "Profile";
}

@section Styles {
    <link rel="stylesheet" href="~/css/seller-profile.css" asp-append-version="true" />
}

<!-- Profile Section -->
<section class="profile-section">
    <!-- Profile Header -->
    <div class="profile-header">
        <div class="profile-header-content">
            <h1 class="profile-title">@Model.User.FullName's Profile</h1>
            <p class="profile-subtitle">Manage your store information and settings</p>
        </div>
    </div>

    <div class="profile-container">
        <div class="profile-content">
            <!-- Profile Card -->
            <div class="profile-card">
                <!-- Profile Image Section -->
                <div class="profile-image-section">
                    @if (!string.IsNullOrEmpty(Model.User.Image))
                    {
                        <div class="profile-image-wrapper">
                            <img src="~/images/users/@Model.User.Image" alt="Seller Image" class="profile-image" />
                        </div>
                    }
                    else
                    {
                        <div class="profile-image-wrapper">
                            <div class="profile-image-placeholder">
                                <i class="fas fa-store"></i>
                            </div>
                        </div>
                    }
                </div>

                <!-- Profile Info -->
                <div class="profile-info">
                    <h2 class="profile-name">@Model.User.FullName</h2>
                    <div class="profile-role">@Model.Category.ToString().Replace("_", " ")</div>

                    <!-- Profile Details -->
                    <ul class="profile-details">
                        <li class="profile-detail-item">
                            <div class="profile-detail-icon">
                                <i class="fas fa-info-circle"></i>
                            </div>
                            <div class="profile-detail-content">
                                <div class="profile-detail-label">Description</div>
                                <div class="profile-detail-value">@(string.IsNullOrEmpty(Model.Description) ? "No description provided" : Model.Description)</div>
                            </div>
                        </li>

                        <li class="profile-detail-item">
                            <div class="profile-detail-icon">
                                <i class="fas fa-map-marker-alt"></i>
                            </div>
                            <div class="profile-detail-content">
                                <div class="profile-detail-label">Address</div>
                                <div class="profile-detail-value">@(string.IsNullOrEmpty(Model.Address) ? "No address provided" : Model.Address)</div>
                            </div>
                        </li>

                        <li class="profile-detail-item">
                            <div class="profile-detail-icon">
                                <i class="fas fa-circle"></i>
                            </div>
                            <div class="profile-detail-content">
                                <div class="profile-detail-label">Status</div>
                                <div class="profile-detail-value">
                                    <span class="status-badge @(Model.Status.ToString().ToLower())">
                                        <i class="fas @(Model.Status == Orderaty.Models.SellerStatus.Open ? "fa-check-circle" : "fa-times-circle")"></i>
                                        @Model.Status.ToString().Replace("_", " ")
                                    </span>
                                </div>
                            </div>
                        </li>

                        <li class="profile-detail-item">
                            <div class="profile-detail-icon">
                                <i class="fas fa-tag"></i>
                            </div>
                            <div class="profile-detail-content">
                                <div class="profile-detail-label">Category</div>
                                <div class="profile-detail-value">@Model.Category.ToString().Replace("_", " ")</div>
                            </div>
                        </li>

                        <li class="profile-detail-item">
                            <div class="profile-detail-icon">
                                <i class="fas fa-star"></i>
                            </div>
                            <div class="profile-detail-content">
                                <div class="profile-detail-label">Rating</div>
                                <div class="profile-detail-value">@Model.Rating.ToString("0.0") ⭐</div>
                            </div>
                        </li>
                    </ul>

                    <!-- Profile Actions -->
                    <div class="profile-actions">
                        <a asp-action="Edit" class="profile-btn profile-btn-primary">
                            <i class="fas fa-edit"></i>
                            Edit Profile
                        </a>
                        <a asp-action="Dashboard" class="profile-btn profile-btn-secondary">
                            <i class="fas fa-tachometer-alt"></i>
                            Back to Dashboard
                        </a>
                    </div>
                </div>
            </div>

            <!-- Reviews Section -->
            <div class="profile-stats">
                <div class="reviews-section-header">
                    <h3 class="stats-title">Store Reviews (@(Model.SellerReviews?.Count ?? 0))</h3>
                </div>
                <div class="reviews-list-container">
                    @if (Model.SellerReviews == null || !Model.SellerReviews.Any())
                    {
                        <div class="no-reviews-message">
                            <i class="fas fa-star" style="font-size: 3rem; opacity: 0.3; margin-bottom: 1rem; display: block;"></i>
                            <p style="font-size: 1.125rem; margin-bottom: 0.5rem; color: var(--text-primary); font-weight: 600;">No reviews yet</p>
                            <p style="margin: 0; color: var(--text-secondary);">Your store hasn't received any reviews yet.</p>
                        </div>
                    }
                    else
                    {
                        @foreach (var review in Model.SellerReviews.OrderByDescending(r => r.Id))
                        {
                            var authorName = review.Client?.User?.FullName ?? "Anonymous";
                            var initials = !string.IsNullOrEmpty(authorName) && authorName != "Anonymous" 
                                ? string.Join("", authorName.Split(' ').Take(2).Select(n => n[0])).ToUpper()
                                : "?";
                            
                            <div class="review-card">
                                <div class="review-header">
                                    <div class="review-author-section">
                                        <div class="review-author-avatar">
                                            @initials
                                        </div>
                                        <div class="review-author-info">
                                            <h4 class="review-author">@authorName</h4>
                                            <span class="review-date">Verified Customer</span>
                                        </div>
                                    </div>
                                    <div class="review-rating">
                                        @for (int i = 1; i <= 5; i++)
                                        {
                                            @if (i <= review.Rating)
                                            {
                                                <svg class="icon star-icon" viewBox="0 0 24 24" fill="currentColor" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
                                                </svg>
                                            }
                                            else
                                            {
                                                <svg class="icon" style="color: #d1d5db;" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
                                                    <polygon points="12 2 15.09 8.26 22 9.27 17 14.14 18.18 21.02 12 17.77 5.82 21.02 7 14.14 2 9.27 8.91 8.26 12 2" />
                                                </svg>
                                            }
                                        }
                                        <span class="review-rating-value">@review.Rating.ToString("F1")</span>
                                    </div>
                                </div>
                                @if (!string.IsNullOrEmpty(review.Comment))
                                {
                                    <p class="review-comment">@review.Comment</p>
                                }
                                else
                                {
                                    <p class="review-comment" style="font-style: italic; color: var(--text-secondary);">No comment provided.</p>
                                }
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
</section>

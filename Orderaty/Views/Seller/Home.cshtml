@model Orderaty.Models.Seller

<h2>Welcome, @Model.User.FullName 👋</h2>

@if (!string.IsNullOrEmpty(Model.User.Image))
{
    <img src="~/images/users/@Model.User.Image" alt="Seller Image" style="width:150px;border-radius:10px" />
}
else
{
    <img src="~/images/default-user.png" alt="Default Image" style="width:150px;border-radius:10px" />
}

<p>Your store status: <strong>@Model.Status</strong></p>
<p>Category: <strong>@Model.Category</strong></p>

<a asp-action="Profile" asp-controller="Seller" class="btn btn-primary mt-3">View Profile</a>

@model List<Orderaty.Models.Order>

@{
    ViewData["Title"] = "My Active Deliveries";
}

@section Styles {
    <link rel="stylesheet" href="~/css/orders.css" />
}

<section class="orders-section">
    <!-- Deliveries Header -->
    <div class="orders-header">
        <div class="orders-header-content">
            <h1 class="orders-title">My Active Deliveries</h1>
            <p class="orders-subtitle">Track and manage your ongoing deliveries</p>
        </div>
    </div>

    <div class="orders-container">
        @if (!Model.Any())
        {
            <div class="empty-orders">
                <i class="fas fa-truck"></i>
                <h2 class="empty-orders-title">No active deliveries</h2>
                <p class="empty-orders-text">You don't have any active deliveries at the moment. Check available orders to start delivering!</p>
                <a href="@Url.Action("Orders", "Delivery")" class="browse-btn">
                    <i class="fas fa-box"></i>
                    Browse Available Orders
                </a>
            </div>
        }
        else
        {
            <div class="orders-stats-banner">
                <div class="stats-item">
                    <i class="fas fa-truck"></i>
                    <div class="stats-content">
                        <span class="stats-number">@Model.Count</span>
                        <span class="stats-label">Active Deliveries</span>
                    </div>
                </div>
                <div class="stats-item">
                    <i class="fas fa-dollar-sign"></i>
                    <div class="stats-content">
                        <span class="stats-number">@(Model.Count * 15.00m).ToString("N2") EGP</span>
                        <span class="stats-label">Expected Earnings</span>
                    </div>
                </div>
            </div>

            <div class="orders-list">
                @foreach (var order in Model.OrderByDescending(o => o.CreatedAt))
                {
                    <div class="order-card delivery-order-card">
                        <div class="order-header-card">
                            <div class="order-number-status">
                                <span class="order-number">#@order.Id.ToString("D5")</span>
                                <span class="order-time-badge-inline">
                                    <i class="fas fa-clock"></i>
                                    @GetTimeAgo(order.CreatedAt)
                                </span>
                            </div>
                            <div class="order-meta">
                                <span class="order-price">@order.TotalPrice.ToString("N2") EGP</span>
                                <span class="order-status @GetStatusClass(order.Status)">
                                    <i class="@GetStatusIcon(order.Status)"></i>
                                    @order.Status.ToString()
                                </span>
                            </div>
                        </div>

                        <div class="order-body-compact">
                            <!-- First Row: Route Information -->
                            <div class="delivery-route-row">
                                <div class="route-point-horizontal pickup">
                                    <div class="route-icon-small">
                                        <i class="fas fa-store"></i>
                                    </div>
                                    <div class="route-info">
                                        <span class="route-label-small">Pickup From</span>
                                        <span class="route-address-compact">@(order.Seller?.Address ?? "N/A")</span>
                                    </div>
                                </div>

                                <div class="route-arrow">
                                    <i class="fas fa-arrow-right"></i>
                                </div>

                                <div class="route-point-horizontal delivery">
                                    <div class="route-icon-small">
                                        <i class="fas fa-home"></i>
                                    </div>
                                    <div class="route-info">
                                        <span class="route-label-small">Deliver to</span>
                                        <span class="route-address-compact">@(order.Client?.Address ?? "N/A")</span>
                                    </div>
                                </div>
                            </div>

                            <!-- Second Row: Order Info & Actions -->
                            <div class="order-info-row">
                                <div class="order-meta-info">
                                    <span class="order-date-compact">
                                        <i class="fas fa-calendar-alt"></i>
                                        @order.CreatedAt.ToString("MMM d, yyyy • h:mm tt")
                                    </span>
                                    <div class="items-info-inline">
                                        <i class="fas fa-shopping-bag"></i>
                                        <span><strong>@(order.OrderedItems?.Count ?? 0)</strong> @((order.OrderedItems?.Count ?? 0) == 1 ? "item" : "items")</span>
                                    </div>
                                    <div class="items-info-inline" style="background: var(--warning-bg); border-color: var(--warning-color);">
                                        <i class="fas fa-dollar-sign" style="color: var(--warning-color);"></i>
                                        <span><strong>15.00 EGP</strong> earning</span>
                                    </div>
                                </div>
                                <a href="@Url.Action("OrderDetails", "Delivery", new { id = order.Id })" class="view-details-btn-inline">
                                    <i class="fas fa-eye"></i>
                                    View Details
                                </a>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</section>

@section Scripts {
    <script>
    </script>
}

@functions {
    string GetTimeAgo(DateTime createdAt)
    {
        var timeSpan = DateTime.Now - createdAt;
        
        if (timeSpan.TotalMinutes < 1)
            return "Just now";
        else if (timeSpan.TotalMinutes < 60)
            return $"{(int)timeSpan.TotalMinutes} min ago";
        else if (timeSpan.TotalHours < 24)
            return $"{(int)timeSpan.TotalHours} hour{((int)timeSpan.TotalHours != 1 ? "s" : "")} ago";
        else
            return $"{(int)timeSpan.TotalDays} day{((int)timeSpan.TotalDays != 1 ? "s" : "")} ago";
    }

    string GetStatusClass(Orderaty.Models.OrderStatus status)
    {
        return status switch
        {
            Orderaty.Models.OrderStatus.PendingDelivery => "status-pendingdelivery",
            Orderaty.Models.OrderStatus.Processing => "status-processing",
            Orderaty.Models.OrderStatus.Shipped => "status-shipped",
            Orderaty.Models.OrderStatus.Delivered => "status-delivered",
            Orderaty.Models.OrderStatus.Cancelled => "status-cancelled",
            _ => "status-pendingdelivery"
        };
    }

    string GetStatusIcon(Orderaty.Models.OrderStatus status)
    {
        return status switch
        {
            Orderaty.Models.OrderStatus.PendingDelivery => "fas fa-clock",
            Orderaty.Models.OrderStatus.Processing => "fas fa-spinner",
            Orderaty.Models.OrderStatus.Shipped => "fas fa-truck",
            Orderaty.Models.OrderStatus.Delivered => "fas fa-check-circle",
            Orderaty.Models.OrderStatus.Cancelled => "fas fa-times-circle",
            _ => "fas fa-clock"
        };
    }
}
